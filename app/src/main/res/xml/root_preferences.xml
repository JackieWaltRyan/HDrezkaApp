<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/cat_interface">
        <ListPreference
            app:defaultValue="0"
            app:entries="@array/screens"
            app:entryValues="@array/screensIds"
            app:key="screens"
            app:layout="@layout/custom_list_preference"
            app:title="@string/cat_main_screen"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/cat_app">
        <ListPreference
            app:defaultValue="http://hdrezka.tv"
            app:entries="@array/providers"
            app:entryValues="@array/providersIds"
            app:key="providers"
            app:layout="@layout/custom_list_preference"
            app:title="@string/cat_provider"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>