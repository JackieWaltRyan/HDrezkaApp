<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.falcofemoralis.hdrezkaapp.views.fragments.FilmFragment">

    <ProgressBar
        android:id="@+id/fragment_film_pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragment_film_sv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/fragment_film_ll_title_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_film_tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:breakStrategy="balanced"
                        android:text="Film title Film title Film title Film title Film title Film title Film title Film title "
                        android:textColor="@color/main_color_3"
                        android:textSize="@dimen/head_text" />

                    <TextView
                        android:id="@+id/fragment_film_tv_origtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:breakStrategy="balanced"
                        android:text="Film original title"
                        android:textColor="@color/main_color_3"
                        android:textSize="@dimen/normal_text" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/fragment_film_iv_bookmark"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0.15"
                    android:background="#00000000"
                    android:clickable="true"
                    android:contentDescription="bookmarks button"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_star_bookmark_24" />

                <ImageView
                    android:id="@+id/fragment_film_iv_share"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0.15"
                    android:background="#00000000"
                    android:clickable="true"
                    android:contentDescription="share button"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:src="@drawable/ic_baseline_share_24" />

            </LinearLayout>

            <!-- Genres -->
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/fragment_film_ll_genres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:divider="@drawable/divider"
                    android:orientation="horizontal"
                    android:showDividers="middle" />
            </HorizontalScrollView>

            <!-- Poster and main info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fragment_film_iv_poster"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="film poster" />

                    <TextView
                        android:id="@+id/fragment_film_tv_download"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/roundedbutton"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:text="@string/download"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_film_tv_ratingIMDB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="IMDB Rating"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text" />

                    <TextView
                        android:id="@+id/fragment_film_tv_ratingKP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="KP Rating"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text" />

                    <TextView
                        android:id="@+id/fragment_film_tv_ratingWA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="WA Rating"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text" />

                    <TextView
                        android:id="@+id/fragment_film_tv_ratingHR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="HR Rating"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text" />


                    <TextView
                        android:id="@+id/fragment_film_tv_directors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Directors"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text" />

                    <TextView
                        android:id="@+id/fragment_film_tv_releaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Release date"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text" />

                    <TextView
                        android:id="@+id/fragment_film_tv_runtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Runtime"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text" />

                    <TextView
                        android:id="@+id/fragment_film_tv_countries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Countries"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text" />

                    <TextView
                        android:id="@+id/fragment_film_tv_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Type"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text" />

                </LinearLayout>
            </LinearLayout>

            <!-- Plot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/plot"
                    android:textColor="@color/white"
                    android:textSize="@dimen/head_text" />

                <TextView
                    android:id="@+id/fragment_film_tv_plot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:justificationMode="inter_word"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text" />
            </LinearLayout>

            <!-- Open in player -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/fragment_film_tv_open_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/roundedbutton"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/start_watching"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Player -->
            <LinearLayout
                android:id="@+id/fragment_film_ll_player_container"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/fragment_film_pb_player_loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <WebView
                    android:id="@+id/fragment_film_wv_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <!--Rating-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.willy.ratingbar.ScaleRatingBar
                    android:id="@+id/fragment_film_srb_rating_hdrezka_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:elevation="10dp"
                    app:srb_clearRatingEnabled="true"
                    app:srb_clickable="true"
                    app:srb_drawableEmpty="@drawable/ic_baseline_star_transparent_24"
                    app:srb_drawableFilled="@drawable/ic_baseline_star_active_24"
                    app:srb_isIndicator="false"
                    app:srb_numStars="10"
                    app:srb_scrollable="true"
                    app:srb_starHeight="30dp"
                    app:srb_starPadding="5dp"
                    app:srb_starWidth="30dp"
                    app:srb_stepSize="1" />

                <com.willy.ratingbar.ScaleRatingBar
                    android:id="@+id/fragment_film_srb_rating_hdrezka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:elevation="5dp"
                    app:srb_clearRatingEnabled="true"
                    app:srb_clickable="false"
                    app:srb_drawableEmpty="@drawable/ic_baseline_star_empty_24"
                    app:srb_drawableFilled="@drawable/ic_baseline_star_24"
                    app:srb_isIndicator="true"
                    app:srb_minimumStars="1"
                    app:srb_numStars="10"
                    app:srb_scrollable="false"
                    app:srb_starHeight="30dp"
                    app:srb_starPadding="5dp"
                    app:srb_starWidth="30dp"
                    app:srb_stepSize="0.1" />


            </RelativeLayout>


            <!-- Actors -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/cast"
                    android:textColor="@color/white"
                    android:textSize="@dimen/head_text" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/fragment_film_ll_actorsLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/divider"
                        android:orientation="horizontal"
                        android:showDividers="middle" />
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Schedule -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_film_tv_schedule_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/series_timetable"
                    android:textColor="@color/white"
                    android:textSize="@dimen/head_text" />

                <LinearLayout
                    android:id="@+id/fragment_film_ll_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_film_tv_collection_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/collection"
                    android:textColor="@color/white"
                    android:textSize="@dimen/head_text" />

                <LinearLayout
                    android:id="@+id/fragment_film_tv_collection_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_film_tv_related_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/related"
                    android:textColor="@color/white"
                    android:textSize="@dimen/head_text" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/fragment_film_tv_related_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/comments"
                    android:textColor="@color/white"
                    android:textSize="@dimen/head_text" />

                <TextView
                    android:id="@+id/fragment_film_view_comment_editor_opener"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/light_bg"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:text="@string/new_comment_hint"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_film_rv_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/inflate_comment" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/fragment_film_pb_comments_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/fragment_film_ll_comment_editor_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true"
        android:background="@drawable/comment_editor_bg"
        android:elevation="10dp"
        android:orientation="vertical"
        android:visibility="gone" />
</RelativeLayout>
